<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/zhitu"
                   android:id="@+id/zhitu"
                   android:layout_centerHorizontal="true"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/white_line"
                   android:layout_below="@+id/zhitu"
                   android:layout_marginTop="8dp"
                   android:id="@+id/line_one"
                   android:layout_centerHorizontal="true"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/zhiban"
                   android:id="@+id/zhiban"
                   android:layout_marginTop="8dp"
                   android:layout_below="@+id/line_one"
                   android:layout_centerHorizontal="true"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/white_line"
                   android:layout_below="@+id/zhiban"
                   android:layout_marginTop="8dp"
                   android:id="@+id/line_two"
                   android:layout_centerHorizontal="true"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/zhuzao"
                   android:id="@+id/zhuzao"
                   android:layout_marginTop="8dp"
                   android:layout_below="@+id/line_two"
                   android:layout_centerHorizontal="true"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/white_line"
                   android:layout_below="@+id/zhuzao"
                   android:layout_marginTop="8dp"
                   android:id="@+id/line_three"
                   android:layout_centerHorizontal="true"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/damo"
                   android:id="@+id/damo"
                   android:layout_marginTop="8dp"
                   android:layout_below="@+id/line_three"
                   android:layout_centerHorizontal="true"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/white_line"
                   android:layout_below="@+id/damo"
                   android:layout_marginTop="8dp"
                   android:id="@+id/line_four"
                   android:layout_centerHorizontal="true"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/paoguang"
                   android:id="@+id/paoguang"
                   android:layout_marginTop="8dp"
                   android:layout_below="@+id/line_four"
                   android:layout_centerHorizontal="true"
                   android:layout_height="wrap_content"/>

        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/pic_one"
                   android:layout_toLeftOf="@+id/zhitu"
                   android:layout_height="60dp"/>
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/pic_one"
                   android:layout_below="@+id/line_one"
                   android:layout_toRightOf="@+id/zhiban"
                   android:layout_height="60dp"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_below="@+id/line_two"
                   android:src="@drawable/pic_one"
                   android:layout_toLeftOf="@+id/zhuzao"
                   android:layout_height="60dp"/>
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/pic_one"
                   android:layout_below="@+id/line_three"
                   android:layout_toRightOf="@+id/damo"
                   android:layout_height="60dp"/>
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/pic_one"
                   android:layout_below="@+id/line_four"
                   android:layout_toLeftOf="@+id/paoguang"
                   android:layout_height="60dp"/>
    </RelativeLayout>

</LinearLayout>